<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/partner_bookingid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textColor="#000"
        android:visibility="invisible"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="6sp" />
    <android.support.v7.widget.CardView
        android:id="@+id/cardviewcateg"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="10dp"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/partnerhome_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Namesssssssssssss"
                    android:maxEms="24"
                    android:layout_weight=".5"
                    android:textColor="#000"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="end"
android:layout_weight="1.5"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="12sp"
                  />
            </LinearLayout>


            <TextView
                android:id="@+id/partnerhome_usercategname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Name"
                android:textColor="#000"

                android:fontFamily="@font/nunito_semibold"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/partnerhome_usersubcateg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="#000"
                android:text="subacter"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/partnerhome_userlocality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="#000"
                android:text="locality"

                android:fontFamily="@font/nunito_semibold"
                android:textSize="14sp" />


            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_weight="2">

                <Button
                    android:id="@+id/partneraccrej_rejectbut"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start"
                    android:background="@drawable/shape_users"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/partneraccrej_acceptbut"

                    android:layout_width="wrap_content"
                    android:layout_height="35dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:background="@drawable/filter_shape"

                    android:fontFamily="@font/nunito_semibold"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />
        </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>