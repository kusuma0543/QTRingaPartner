<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardviewcateg"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="10dp"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:weightSum="2">


            <TextView
                android:id="@+id/partnerhome_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Name"
                android:textColor="#000"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/partnerhome_usersubcateg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="#000"

                android:fontFamily="@font/nunito_semibold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/partner_bookingid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="#000"
                android:visibility="invisible"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="6sp" />
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_weight="2">
            <Button
                android:id="@+id/partneraccrej_rejectbut"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:text="Reject"
                android:textStyle="bold"

                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/colorAccent"
                android:background="@drawable/shape_users"/>

            <Button
                android:id="@+id/partneraccrej_acceptbut"

                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:background="@drawable/filter_shape"
                android:fontFamily="@font/nunito_semibold"
                android:text="Accept"
                android:layout_marginLeft="60dp"

                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>