<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containor"
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:id="@+id/scroll_review"
        android:focusableInTouchMode="true"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:descendantFocusability="blocksDescendants"

            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/servpdet_image"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/userbackcode"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/ic_person_black_24dp" />
            <TextView
                android:id="@+id/servpdet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adi narayan"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:maxLines="1"
                android:maxLength="22"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_semibold"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:id="@+id/servpdet_localityname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chennai"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_semibold"
                android:layout_gravity="center"
                android:gravity="center" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/servpdet_ratingbar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:max="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/servpdet_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/10"
                    android:layout_alignEnd="@+id/servpdet_ratingbar"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_users"
                    android:text="Visiting Charge"/>
                <Button
                    android:id="@+id/servpdet_visitingcharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/filter_shape"
                    android:text="Visiting Charge"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHint"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="3"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Jobs Done"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:maxLength="16"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/nunito_semibold" />
                    <TextView
                        android:id="@+id/servpdet_totaljobs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="243"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorHint"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Review"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:maxLength="16"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/nunito_semibold" />
                    <TextView
                        android:id="@+id/servpdet_totalreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="8/10"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorHint"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Updated"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:maxLength="16"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/nunito_semibold" />
                    <TextView
                        android:id="@+id/servpdet_lastupdated"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="10/1/2018"
                        android:maxLength="10"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHint"/>


            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Description"

                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp"/>
            <View
                android:layout_width="110dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"

                android:background="@color/colorHint"/>
            <TextView
                android:id="@+id/servpdet_desc"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="its my desc"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorHint"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"                android:textSize="20sp"/>
            <View
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"

                android:background="@color/colorHint"/>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_add"
                android:focusable="true"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="1dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ListView
                    android:id="@+id/s_service"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:visibility="invisible" />

                <technolifestyle.com.imageslider.FlipperLayout
                    android:id="@+id/flipper_layout_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    >

                </technolifestyle.com.imageslider.FlipperLayout>

            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"

                android:background="@color/colorHint"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"                android:textSize="20sp"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"

                android:background="@color/colorHint"/>
            <android.support.v7.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                app:cardElevation="10dp"
                >
                <ListView
                    android:id="@+id/review_part_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:animationCache="false"
                    android:divider="@null"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true"

                    />

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>