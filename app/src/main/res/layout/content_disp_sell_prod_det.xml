<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/sellp_appbar"
    android:background="#FFF5F5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ringaapp.ringapartner.DispSellProdDet"
    tools:showIn="@layout/activity_disp_sell_prod_det">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Ttle"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/sell_dis_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Lenovo"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="15dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/sell_dis_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="If you use a Windows computer you may end up with different results. This is possibly due to the way Windows handles newlines. Essentially, if you have just newline characters"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="15dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/sell_dis_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="18000"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Images"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="15dp"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sell_dis_add_images"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/adharuploadbut"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sell_dis_add_images_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="Click to Upload Aadhar Card"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="16sp"/>
                <TextView

                    android:id="@+id/sell_dis_remimages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="(front and back images)"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <GridView
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:id="@+id/listview"
            android:gravity="center"
            android:layout_gravity="center"
            android:horizontalSpacing="0dp"
            android:verticalSpacing="3dp"
            android:numColumns="2"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
