<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/sellp_appbar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ringaapp.ringapartner.activities.DispSellProdDet"
    tools:showIn="@layout/activity_disp_sell_prod_det">


    <ScrollView
        android:layout_width="match_parent"
 android:layout_marginBottom="40dp"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Product Images"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/nunito_semibold"

            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Images"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="25dp"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sell_dis_add_images"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/adharuploadbut"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sell_dis_add_images_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="Click to upload"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="16sp"/>
                <TextView

                    android:id="@+id/sell_dis_remimages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="(upload 0-4 images)"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="35dp"
            app:cardElevation="10dp"
            >
            <TextView
                android:id="@+id/sell_dis_upload_imgpreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Uploaded Images Preview"
                android:layout_gravity="center"/>
        <GridView
            android:id="@+id/sell_dis_gridview"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="3dp"
            android:numColumns="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    </ScrollView>
    <Button
        android:id="@+id/publish_prod_but"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/filter_shape"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"

        android:text="Publish"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />
</RelativeLayout>
